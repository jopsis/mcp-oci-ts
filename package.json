  "description": "Model Context Protocol server for Oracle Cloud Infrastructure using TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
